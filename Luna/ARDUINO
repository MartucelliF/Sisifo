#include <ESP8266WiFi.h> // O incluye WiFi.h si usas ESP32
#include <Wire.h>
#include <LiquidCrystal_I2C.h>
#include <WiFiClientSecure.h>

const char* ssid = "SSID";
const char* password = "contraseña";
const char* host = "server host"; // 

// Inicializa el LCD
LiquidCrystal_I2C lcd(0x27, 16, 2);

void setup() {
  Serial.begin(115200);
  lcd.begin();
  lcd.backlight();

  // Conectar a WiFi
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("WiFi conectado");

  // Conectar al servidor
  WiFiClientSecure client;
  client.setInsecure();
  if (!client.connect(host, 443)) {
    Serial.println("Conexión fallida");
    return;
  }

 
  client.print(String("GET ") + "/getData.php HTTP/1.1\r\n" +
               "Host: " + host + "\r\n" +
               "Connection: close\r\n\r\n");

  
  while (client.connected()) {
    String line = client.readStringUntil('\n');
    if (line == "\r") {
      break;
    }
  }

 
  String line;
  while (client.available()) {
    line = client.readStringUntil('\n');
    Serial.println(line);
    lcd.clear();
    lcd.print(line.substring(0, 16)); // Mostrar primeras 16 caracteres en la primera línea
    delay(3000); // Mostrar cada línea por 3 segundos
  }
}

void loop() {
}
